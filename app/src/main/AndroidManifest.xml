<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.nomorecheckshirts.checkloset">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        android:usesCleartextTraffic="true">
        <activity android:name="io.github.nomorecheckshirts.checkloset.MainActivity">
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"> <!--https 대신 http 사용 허가-->
        <activity android:name=".PreferenceActivity"></activity>
        <activity android:name=".TestActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CalendarViewActivity"/>
        <activity android:name=".GalleryViewActivity"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" /> <!--인터넷 허용-->

</manifest>